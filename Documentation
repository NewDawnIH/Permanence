        <!-- Table Modal -->
        <div id="table-modal" style="display:none; background: white; width: 90%; max-width: 700px; max-height: 90vh; border-radius: 8px; box-shadow: 0 10px 25px rgba(0,0,0,0.2); overflow-y: auto; flex-direction: column;">
            <div style="padding: 24px; border-bottom: 1px solid #eee; display: flex; justify-content: space-between; align-items: center;">
                <h3 style="margin: 0; font-size: 20px;">New Data Table</h3>
                <button onclick="closeModal()" style="background: none; border: none; font-size: 24px; cursor: pointer; color: #999;">&times;</button>
            </div>
            <div style="padding: 24px;">
                <div style="margin-bottom: 20px;">
                    <label style="display: block; font-size: 12px; color: #1a73e8; font-weight: 600; margin-bottom: 4px;">TABLE NAME (e.g. USR_PROFILE)</label>
                    <input type="text" id="table-name-input" style="width: 100%; padding: 10px; border: 1px solid #dadce0; border-radius: 4px; box-sizing: border-box;">
                </div>
                <div style="margin-bottom: 20px;">
                    <label style="display: block; font-size: 12px; color: #1a73e8; font-weight: 600; margin-bottom: 4px;">DESCRIPTION</label>
                    <textarea id="table-desc-input" rows="3" style="width: 100%; padding: 10px; border: 1px solid #dadce0; border-radius: 4px; box-sizing: border-box;"></textarea>
                </div>
            </div>
            <div style="padding: 16px 24px; border-top: 1px solid #eee; display: flex; justify-content: flex-end; gap: 12px;">
                <button onclick="closeModal()" style="background: none; border: 1px solid #dadce0; color: #5f6368; padding: 8px 16px; border-radius: 4px; cursor: pointer;">Cancel</button>
                <button onclick="saveTable()" style="background: #1a73e8; border: none; color: white; padding: 8px 24px; border-radius: 4px; cursor: pointer;">Add Table</button>
            </div>
        </div>
    </div>

    <script>
        let projects = [];
        let tables = [];
        let programs = [];
        let currentProjectId = null;
        let currentTableId = null;
        let currentProgramId = null;
        
        const statusColors = {
            'ANA': { bg: '#e8f0fe', text: '#1967d2' },
            'DEV': { bg: '#fef7e0', text: '#ea8600' },
            'APB': { bg: '#fce8e6', text: '#d93025' },
            'DONE': { bg: '#e6f4ea', text: '#1e8e3e' }
        };

        function showTab(tabName) {
            const tabs = ['projects', 'programs', 'tables', 'project-detail', 'program-detail', 'table-detail'];
            tabs.forEach(t => {
                const el = document.getElementById('tab-' + t);
                if (el) el.style.display = (tabName === t) ? 'block' : 'none';
            });

            // Handle nav highlighting
            ['nav-projects', 'nav-programs', 'nav-tables'].forEach(n => {
                const el = document.getElementById(n);
                if (!el) return;
                const isActive = (n === 'nav-projects' && tabName.includes('project')) ||
                                 (n === 'nav-programs' && tabName.includes('program')) ||
                                 (n === 'nav-tables' && tabName.includes('table'));
                el.style.backgroundColor = isActive ? '#e8f0fe' : 'transparent';
                el.style.color = isActive ? '#1a73e8' : '#5f6368';
            });

            if(tabName === 'projects') renderProjects();
            if(tabName === 'programs') renderPrograms();
            if(tabName === 'tables') renderTables();
        }

        function closeModal() {
            document.getElementById('modal-overlay').style.display = 'none';
            document.getElementById('project-modal').style.display = 'none';
            document.getElementById('program-modal').style.display = 'none';
            document.getElementById('table-modal').style.display = 'none';
            resetForms();
        }

        function resetForms() {
            const ids = ['proj-name-input', 'proj-desc-input', 'proj-status-input', 'prog-name-input', 'prog-ext-name-input', 'table-name-input', 'table-desc-input'];
            ids.forEach(id => {
                const el = document.getElementById(id);
                if (el) el.value = (id === 'proj-status-input') ? 'ANA' : '';
            });
        }

        // --- PROJECTS LOGIC ---
        function openNewProjectModal() {
            document.getElementById('modal-overlay').style.display = 'flex';
            document.getElementById('project-modal').style.display = 'flex';
        }

        function saveProject() {
            const name = document.getElementById('proj-name-input').value;
            if (!name) return;
            projects.push({
                id: Date.now(),
                name,
                description: document.getElementById('proj-desc-input').value,
                status: document.getElementById('proj-status-input').value,
                programs: [], tables: [], logs: [], todos: []
            });
            renderProjects();
            closeModal();
        }

        function openProjectDetail(id) {
            currentProjectId = id;
            const project = projects.find(p => p.id === id);
            if (!project) return;
            document.getElementById('detail-name').innerText = project.name;
            document.getElementById('detail-desc-input').value = project.description || "";
            document.getElementById('detail-status-select').value = project.status;
            renderDetailResources();
            renderDetailLogs();
            renderDetailTodos();
            showTab('project-detail');
        }

        function saveDescriptionDirectly(newDesc) {
            const project = projects.find(p => p.id === currentProjectId);
            if (project) project.description = newDesc;
        }

        function updateProjectStatus(newStatus, id = null) {
            const pid = id || currentProjectId;
            const project = projects.find(p => p.id == pid);
            if (project) {
                project.status = newStatus;
                renderProjects();
                if (currentProjectId == pid) {
                    const statusSelect = document.getElementById('detail-status-select');
                    if (statusSelect) statusSelect.value = newStatus;
                }
            }
        }

        function renderDetailResources() {
            const project = projects.find(p => p.id === currentProjectId);
            if (!project) return;
            document.getElementById('detail-programs-list').innerHTML = project.programs.map(p => `<span style="background: #e8f0fe; color: #1a73e8; padding: 4px 10px; border-radius: 4px; font-size: 13px;">${p}</span>`).join('');
            document.getElementById('detail-tables-list').innerHTML = project.tables.map(t => `<span style="background: #f1f3f4; color: #5f6368; padding: 4px 10px; border-radius: 4px; font-size: 13px;">${t}</span>`).join('');
        }

        function addResource(type) {
            const project = projects.find(p => p.id === currentProjectId);
            const inputId = type === 'programs' ? 'add-prog-input' : 'add-table-input';
            const val = document.getElementById(inputId).value.trim();
            if (val) {
                project[type].push(val);
                document.getElementById(inputId).value = '';
                renderDetailResources();
            }
        }

        function renderDetailTodos() {
            const project = projects.find(p => p.id === currentProjectId);
            if (!project) return;
            document.getElementById('detail-todo-list').innerHTML = project.todos.map((t, idx) => `
                <div style="display: flex; align-items: center; gap: 10px; background: #fafafa; padding: 8px 12px; border-radius: 4px; border: 1px solid #eee;">
                    <input type="checkbox" ${t.done ? 'checked' : ''} onchange="toggleTodo(${project.id}, ${idx})">
                    <div style="flex: 1; display: flex; flex-direction: column;">
                        <span style="font-size: 14px; ${t.done ? 'text-decoration: line-through; color: #999;' : ''}">${t.text}</span>
                        <span style="font-size: 10px; color: #9aa0a6;">Created: ${t.timestamp || 'N/A'}</span>
                    </div>
                </div>
            `).join('');
        }

        function addTodo() {
            const project = projects.find(p => p.id === currentProjectId);
            const text = document.getElementById('add-todo-input').value.trim();
            if (text) {
                const now = new Date();
                const timestamp = now.toLocaleDateString() + ' ' + now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                project.todos.push({ text, done: false, timestamp });
                document.getElementById('add-todo-input').value = '';
                renderDetailTodos();
                renderProjects();
            }
        }

        function toggleTodo(projId, todoIdx) {
            const project = projects.find(p => p.id == projId);
            if (project) {
                project.todos[todoIdx].done = !project.todos[todoIdx].done;
                if (currentProjectId == projId && document.getElementById('tab-project-detail').style.display === 'block') renderDetailTodos();
                renderProjects();
            }
        }

        function renderDetailLogs() {
            const project = projects.find(p => p.id === currentProjectId);
            if (!project) return;
            document.getElementById('detail-log-list').innerHTML = project.logs.slice().reverse().map(l => `
                <div style="border-left: 3px solid #1a73e8; padding-left: 16px; margin-bottom: 8px;">
                    <div style="font-size: 11px; color: #9aa0a6; margin-bottom: 4px;">${l.date}</div>
                    <div style="font-size: 14px; line-height: 1.5; color: #202124;">${l.text}</div>
                </div>
            `).join('');
        }

        function addLog() {
            const project = projects.find(p => p.id === currentProjectId);
            const text = document.getElementById('add-log-input').value.trim();
            if (text) {
                project.logs.push({ date: new Date().toLocaleString(), text });
                document.getElementById('add-log-input').value = '';
                renderDetailLogs();
            }
        }

        function renderProjects() {
            const list = document.getElementById('project-list');
            const globalTodoContainer = document.getElementById('global-todos-container');
            const globalTodoList = document.getElementById('global-todo-list');
            const overviewTimestamp = document.getElementById('overview-timestamp');
            const emptyState = document.getElementById('empty-state');
            if (!list) return;
            if (overviewTimestamp) overviewTimestamp.innerText = "Last update: " + new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            
            let allPendingTodos = [];
            projects.forEach(p => p.todos.forEach((t, idx) => { if (!t.done) allPendingTodos.push({ ...t, projectName: p.name, projId: p.id, todoIdx: idx }); }));
            
            if (globalTodoContainer) globalTodoContainer.style.display = allPendingTodos.length > 0 ? 'block' : 'none';
            if (allPendingTodos.length > 0 && globalTodoList) {
                globalTodoList.innerHTML = allPendingTodos.map(t => `
                    <div style="background: #fff; border-left: 4px solid #f4b400; padding: 12px 16px; border-radius: 4px; box-shadow: 0 1px 2px rgba(0,0,0,0.1); display: flex; justify-content: space-between; align-items: center;">
                        <div style="display: flex; align-items: center; gap: 12px; flex: 1;">
                            <input type="checkbox" onchange="toggleTodo(${t.projId}, ${t.todoIdx})" style="cursor: pointer; width: 16px; height: 16px;">
                            <div style="display: flex; flex-direction: column;">
                                <span style="font-size: 14px; font-weight: 500;">${t.text}</span>
                                <span style="font-size: 10px; color: #9aa0a6;">Added ${t.timestamp || 'recently'}</span>
                            </div>
                        </div>
                        <span style="font-size: 11px; color: #70757a; background: #f1f3f4; padding: 2px 8px; border-radius: 10px; margin-left: 8px;">${t.projectName}</span>
                    </div>
                `).join('');
            }
            
            if (emptyState) emptyState.style.display = projects.length > 0 ? 'none' : 'block';
            list.innerHTML = '';
            if (projects.length === 0 && emptyState) {
                list.appendChild(emptyState);
            } else {
                projects.forEach(p => {
                    const color = statusColors[p.status];
                    const card = document.createElement('div');
                    card.style.cssText = `background: white; border: 1px solid #e0e0e0; border-radius: 8px; padding: 20px; display: flex; flex-direction: column; gap: 12px; cursor: pointer; position: relative;`;
                    card.onclick = (e) => { if (e.target.tagName !== 'SELECT' && e.target.type !== 'checkbox') openProjectDetail(p.id); };
                    card.innerHTML = `
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div style="flex: 1;">
                                <h3 style="margin: 0 0 4px 0; font-size: 18px;">${p.name}</h3>
                                <p style="margin: 0; font-size: 14px; color: #5f6368;">${p.description || 'No description'}</p>
                            </div>
                            <select onchange="updateProjectStatus(this.value, ${p.id})" style="background-color: ${color.bg}; color: ${color.text}; padding: 4px 8px; border: none; border-radius: 12px; font-size: 11px; font-weight: bold; cursor: pointer;">
                                <option value="ANA" ${p.status === 'ANA' ? 'selected' : ''}>ANA</option>
                                <option value="DEV" ${p.status === 'DEV' ? 'selected' : ''}>DEV</option>
                                <option value="APB" ${p.status === 'APB' ? 'selected' : ''}>APB</option>
                                <option value="DONE" ${p.status === 'DONE' ? 'selected' : ''}>DONE</option>
                            </select>
                        </div>
                        <div style="display: flex; gap: 24px; font-size: 12px; color: #70757a; border-top: 1px solid #f1f3f4; padding-top: 12px;">
                            <span><strong>Programs:</strong> ${p.programs.length}</span>
                            <span><strong>Tables:</strong> ${p.tables.length}</span>
                            <span><strong>Pending Tasks:</strong> ${p.todos.filter(t => !t.done).length}</span>
                        </div>
                    `;
                    list.appendChild(card);
                });
            }
        }

        // --- PROGRAMS LOGIC ---
        function openNewProgramModal() {
            document.getElementById('modal-overlay').style.display = 'flex';
            document.getElementById('program-modal').style.display = 'flex';
        }

        function saveProgram() {
            const name = document.getElementById('prog-name-input').value.trim();
            if (!name) return;
            programs.push({
                id: Date.now(),
                name,
                extName: document.getElementById('prog-ext-name-input').value.trim(),
                flow: '',
                reads: [],
                writes: []
            });
            renderPrograms();
            closeModal();
        }

        function renderPrograms() {
            const list = document.getElementById('program-list');
            const empty = document.getElementById('program-empty-state');
            if (!list) return;
            if (empty) empty.style.display = programs.length > 0 ? 'none' : 'block';
            list.innerHTML = '';
            if (programs.length === 0 && empty) {
                list.appendChild(empty);
            } else {
                programs.forEach(p => {
                    const card = document.createElement('div');
                    card.style.cssText = `background: white; border: 1px solid #e0e0e0; border-radius: 8px; padding: 24px; cursor: pointer; transition: transform 0.1s; display: flex; flex-direction: column; gap: 8px;`;
                    card.onclick = () => openProgramDetail(p.id);
                    card.innerHTML = `
                        <h3 style="margin: 0; font-size: 18px; color: #1a73e8; font-family: monospace;">${p.name}</h3>
                        <p style="margin: 0; font-size: 14px; color: #5f6368;">${p.extName || 'No title'}</p>
                        <div style="margin-top: 12px; font-size: 12px; color: #9aa0a6;">Flow: ${p.flow ? '‚úÖ' : '‚ùå'} | Reads: ${p.reads.length} | Writes: ${p.writes.length}</div>
                    `;
                    list.appendChild(card);
                });
            }
        }

        function openProgramDetail(id) {
            currentProgramId = id;
            const prog = programs.find(p => p.id === id);
            if (!prog) return;
            document.getElementById('program-detail-name').innerText = prog.name;
            document.getElementById('program-detail-ext-input').value = prog.extName || "";
            document.getElementById('program-flow-input').value = prog.flow || "";
            renderProgramResources();
            showTab('program-detail');
        }

        function saveProgramExtName(val) {
            const p = programs.find(x => x.id === currentProgramId);
            if (p) p.extName = val;
        }

        function saveProgramFlow(val) {
            const p = programs.find(x => x.id === currentProgramId);
            if (p) p.flow = val;
        }

        function renderProgramResources() {
            const p = programs.find(x => x.id === currentProgramId);
            if (!p) return;
            const render = (listId, data) => {
                const el = document.getElementById(listId);
                if (!el) return;
                el.innerHTML = data.map((item, idx) => `
                    <span style="background: #f1f3f4; color: #5f6368; padding: 4px 10px; border-radius: 4px; font-size: 12px; display: flex; align-items: center; gap: 6px;">
                        ${item}
                        <button onclick="removeProgramResource('${listId.includes('reads') ? 'reads' : 'writes'}', ${idx})" style="border:none; background:none; color:#ccc; cursor:pointer; font-weight:bold;">&times;</button>
                    </span>
                `).join('');
            };
            render('program-reads-list', p.reads);
            render('program-writes-list', p.writes);
        }

        function addProgramResource(key) {
            const inputId = key === 'reads' ? 'add-read-table-input' : 'add-write-table-input';
            const valInput = document.getElementById(inputId);
            const val = valInput.value.trim();
            if (val) {
                const p = programs.find(x => x.id === currentProgramId);
                if (p) {
                    p[key].push(val);
                    valInput.value = '';
                    renderProgramResources();
                }
            }
        }

        function removeProgramResource(key, idx) {
            const p = programs.find(x => x.id === currentProgramId);
            if (p) {
                p[key].splice(idx, 1);
                renderProgramResources();
            }
        }

        // --- TABLES LOGIC ---
        function openNewTableModal() {
            document.getElementById('modal-overlay').style.display = 'flex';
            document.getElementById('table-modal').style.display = 'flex';
        }

        function saveTable() {
            const name = document.getElementById('table-name-input').value.trim();
            if (!name) return;
            tables.push({ id: Date.now(), name, description: document.getElementById('table-desc-input').value, fields: [] });
            renderTables();
            closeModal();
        }

        function renderTables() {
            const list = document.getElementById('table-list');
            const empty = document.getElementById('table-empty-state');
            if (!list) return;
            if (empty) empty.style.display = tables.length > 0 ? 'none' : 'block';
            list.innerHTML = '';
            if (tables.length === 0 && empty) {
                list.appendChild(empty);
            } else {
                tables.forEach(t => {
                    const card = document.createElement('div');
                    card.style.cssText = `background: white; border: 1px solid #e0e0e0; border-radius: 8px; padding: 24px; cursor: pointer; display: flex; flex-direction: column; gap: 12px;`;
                    card.onclick = () => openTableDetail(t.id);
                    card.innerHTML = `
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <span style="background: #f1f3f4; padding: 6px; border-radius: 4px; font-size: 18px;">üìÑ</span>
                            <h3 style="margin: 0; font-size: 18px; color: #1a73e8;">${t.name}</h3>
                        </div>
                        <p style="margin: 0; font-size: 14px; color: #5f6368; line-height: 1.4;">${t.description || 'No description provided.'}</p>
                        <div style="margin-top: auto; font-size: 12px; color: #9aa0a6;">${t.fields.length} fields documented</div>
                    `;
                    list.appendChild(card);
                });
            }
        }

        function openTableDetail(id) {
            currentTableId = id;
            const table = tables.find(t => t.id === id);
            if (!table) return;
            document.getElementById('table-detail-name').innerText = table.name;
            document.getElementById('table-detail-desc-input').value = table.description || "";
            renderFields();
            showTab('table-detail');
        }

        function saveTableDescription(val) {
            const table = tables.find(t => t.id === currentTableId);
            if (table) table.description = val;
        }

        function handleFieldAddFromToolbar() {
            const input = document.getElementById('field-quick-add');
            const name = input.value.trim();
            if (!name) return;
            const table = tables.find(t => t.id === currentTableId);
            if (table) {
                table.fields.push({ name, description: '', example: '' });
                input.value = '';
                renderFields();
            }
        }

        function renderFields() {
            const table = tables.find(t => t.id === currentTableId);
            if (!table) return;
            const tbody = document.getElementById('field-list-body');
            const emptyMsg = document.getElementById('field-empty-message');
            if (!tbody) return;
            tbody.innerHTML = '';
            if (emptyMsg) emptyMsg.style.display = table.fields.length === 0 ? 'block' : 'none';
            table.fields.forEach((f, idx) => {
                const tr = document.createElement('tr');
                tr.style.borderBottom = '1px solid #f1f3f4';
                tr.innerHTML = `
                    <td style="padding: 4px 24px;"><input value="${f.name}" onchange="updateField(${idx}, 'name', this.value)" style="width: 100%; border: none; font-weight: 600; font-size: 13px; background:transparent;"></td>
                    <td style="padding: 4px 24px;"><input value="${f.description}" onchange="updateField(${idx}, 'description', this.value)" placeholder="Enter definition..." style="width: 100%; border: none; font-size: 13px; color: #5f6368; background:transparent;"></td>
                    <td style="padding: 4px 24px;"><input value="${f.example}" onchange="updateField(${idx}, 'example', this.value)" placeholder="e.g. 'Active'" style="width: 100%; border: none; font-size: 13px; font-style: italic; color: #70757a; background:transparent;"></td>
                    <td style="text-align: center;"><button onclick="removeField(${idx})" style="border: none; background: none; color: #dadce0; cursor: pointer; font-size: 20px;">&times;</button></td>
                `;
                tbody.appendChild(tr);
            });
        }

        function updateField(idx, key, val) {
            const table = tables.find(t => t.id === currentTableId);
            if (table && table.fields[idx]) table.fields[idx][key] = val;
        }

        function removeField(idx) {
            const table = tables.find(t => t.id === currentTableId);
            if (table) { table.fields.splice(idx, 1); renderFields(); }
        }

        window.onload = () => showTab('projects');
    </script>
</body>
</html>
